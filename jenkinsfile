pipeline{
    agent any

 tools {
        ant 'Ant'
    }
    stages{
        stage("test"){
            steps{
                bat "ant test"
            }
           
        }

          stage("build"){
            steps{
                bat "ant compile"
            }
           
        }

          stage("deploy"){
            steps{
              echo "deploy to the container"
            }
           
        }
    }
    post{
        always{
            echo "========always========"
        }
        success{
            echo "========pipeline executed successfully ========"
        }
        failure{
            echo "========pipeline execution failed========"
        }
    }
}
