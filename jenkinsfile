pipeline{
    agent any

    stages{
        stage("test"){
            steps{
                bat "java -cp "target/classes:lib/*" org.junit.runner.JUnitCore com.example.MyTest"
            }
           
        }

          stage("build"){
            steps{
                bat "javac -d target/classes src/**/*.java"
            }
           
        }

          stage("deploy"){
            steps{
              echo "deploy to the container"
            }
           
        }
    }
    post{
        always{
            echo "========always========"
        }
        success{
            echo "========pipeline executed successfully ========"
        }
        failure{
            echo "========pipeline execution failed========"
        }
    }
}
